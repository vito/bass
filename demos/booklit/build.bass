#!/usr/bin/env bass

(def git
  (load (.git "alpine/git")))

(def repo
  "https://github.com/vito/booklit")

(def latest-booklit
  (git:checkout repo (git:ls-remote repo "HEAD")))

(def booklit
  (load (latest-booklit/project)))

(emit (booklit:build latest-booklit "v0.0.0-dev" "linux" "amd64") *stdout*)

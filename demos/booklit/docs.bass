#!/usr/bin/env bass

(def git
  (load (.git "alpine/git")))

(def repo
  "https://github.com/vito/booklit")

(def latest-booklit
  (git:checkout repo (git:ls-remote repo "HEAD")))

(-> (from "golang"
      ($ latest-booklit/scripts/build-docs $latest-booklit))
    (path ./docs/)
    (emit *stdout*))

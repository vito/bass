(use (.git "alpine/git"))

(def bass-src
  (let [repo "https://github.com/vito/bass"]
    (git:checkout repo (git:ls-remote repo "HEAD"))))

(def images
  (load (bass-src/demos/lib/images)))

(run
  (from (images:bass bass-src)
    ($ bass --version)))

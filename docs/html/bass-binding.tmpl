<div class="bass-binding">
  {{- .Partial "Target" | render -}}

  <a class="comment-title ansi-line" href="{{(.Partial "Reference").Tag | url}}" xxx="https://github.com/vito/bass/tree/main/{{.Partial "Path" | render}}#L{{.Partial "StartLine" | render}}{{with .Partial "EndLine"}}-L{{. | render}}{{end}}">
    <code class="chroma signature">{{.Content | render}}</code>
    <code class="chroma predicates">{{- range .Partial "Predicates"}} <span class="fg-yellow">{{. | render}}</span>{{end}}</code>
  </a>
  {{with .Partial "Body"}}
  <div class="comment-body">
    {{. | render}}
  </div>
  {{end}}
  {{with .Partial "Value"}}
  <div class="binding-value">
    {{. | render}}
  </div>
  {{end}}
</div>

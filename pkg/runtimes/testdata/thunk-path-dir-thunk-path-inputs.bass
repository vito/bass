(def create-dir
  "mkdir some-dir; echo 1 > some-dir/some-file")

(def created
  (from (linux/alpine)
    ($ sh -c $create-dir)))

(defn echo [str]
  (-> ($ sh -c "echo \"$0\" > file" $str)
      (with-image (linux/alpine))
      (subpath ./file)))

(let [stream (read (-> ($ cat ./some-file (echo "2") (echo "3"))
                       (with-dir created/some-dir/)
                       (with-image (linux/alpine)))
                   :json)]
  [(next stream)
   (next stream)
   (next stream)])

(def create-script
  "echo \"#!/bin/sh\n\necho 42\n\" > some-script; chmod +x some-script")

(def created
  (let [create (-> ($ .sh -c $create-script)
                   (in-image "alpine"))]
    (path create ./)))

(next (run (-> ($ .sh -c "$FOO")
               (with-env :FOO created/some-script)
               (in-image "alpine"))))
